    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:endColor="@color/endColor"
                android:startColor="@color/endColor"/>
            <corners android:radius="@dimen/_25sdp"/>
        </shape>
    </item>
</selector>




