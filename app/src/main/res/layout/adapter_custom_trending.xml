<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/new_white_bg">


    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/trending_round"
        app:cardElevation="@dimen/_1sdp">

        <RelativeLayout
            android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/topview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/_5sdp">

                <TextView
                    android:id="@+id/txt_eventName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/iv_add"
                    android:layout_toLeftOf="@+id/iv_add"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="start"
                    android:maxLines="2"
                    android:text="Shubham"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp" />


                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_add"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/add_ico" />

                <LinearLayout
                    android:id="@+id/btm"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_below="@id/txt_eventName"
                    android:layout_marginLeft="@dimen/_minus5sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_2sdp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_2sdp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/ic_placeholder" />

                        <TextView
                            android:id="@+id/txt_eventAdress"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:fontFamily="@font/raleway_regular"
                            android:maxLines="1"
                            android:textColor="@color/btn_bg_color"
                            android:textSize="@dimen/_10ssp" />

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_toRightOf="@id/txt_eventAdress"
                            android:padding="@dimen/_2sdp"
                            app:srcCompat="@drawable/ic_placeholder" />

                        <TextView
                            android:id="@+id/txt_eventmile"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_22sdp"
                            android:layout_marginLeft="@dimen/_22sdp"
                            android:layout_toRightOf="@id/txt_eventAdress"
                            android:fontFamily="@font/raleway_regular"
                            android:maxLines="2"
                            android:textColor="@color/list_date_color"
                            android:textSize="@dimen/_10ssp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end">

                        <ImageView
                            android:id="@+id/green_dot"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/abc_dot" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingStart="0dp"
                            android:paddingLeft="0dp"
                            android:paddingEnd="8dp"
                            android:paddingRight="8dp">

                            <TextView
                                android:id="@+id/txt_time"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="start|center_vertical"
                                android:textColor="@color/top_bar_text"
                                android:textSize="@dimen/_10sdp" />

                            <!-- <LinearLayout
                                 android:id="@+id/like"
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:layout_centerInParent="true"
                                 android:gravity="center"
                                 android:orientation="vertical">-->

                            <TextView
                                android:id="@+id/txt_live"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginStart="0dp"
                                android:layout_marginLeft="0dp"
                                android:gravity="start|center_vertical"
                                android:paddingStart="@dimen/_5sdp"
                                android:paddingLeft="@dimen/_5sdp"
                                android:text="Live"
                                android:textColor="#039904"
                                android:textSize="@dimen/_10sdp" />
                            <!--</LinearLayout>-->

                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_viewPager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_220sdp"
                android:layout_below="@+id/topview"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:orientation="vertical">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/image_slider_pager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:background="@color/black">

                    </android.support.v4.view.ViewPager>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/indicaterView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/image_slider_pager"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/indicator_linear_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_viewPager"
                android:background="@color/white">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/heart"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:padding="2dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/inactive_heart_ico" />

                <TextView
                    android:id="@+id/like_count_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/heart"
                    android:gravity="center"
                    android:text="50"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:layout_toLeftOf="@+id/iv_comment"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/note_book_ico" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_comment"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_group"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/chat_ico" />


                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_group"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="8dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/group_ico" />

                <!-- <RelativeLayout
                     android:id="@+id/lnrLeft"
                     android:layout_width="@dimen/_35sdp"
                     android:layout_height="match_parent"
                     android:layout_alignParentEnd="true"
                     android:layout_alignParentRight="true"
                     android:layout_centerVertical="true"
                     android:layout_margin="5dp"
                     android:orientation="horizontal">

                     <ImageView
                         android:id="@+id/iv_group"
                         android:layout_width="@dimen/_20sdp"
                         android:layout_height="@dimen/_20sdp"
                         android:layout_centerVertical="true"
                         android:src="@drawable/group_ico"
                         android:visibility="gone" />

                     <RelativeLayout
                         android:id="@+id/comeInUser_lnr"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentRight="true"
                         android:layout_centerVertical="true"
                         android:gravity="center">

                     </RelativeLayout>
                 </RelativeLayout>-->

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/txt_gap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:layout_below="@+id/card"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_gap2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/card"
        android:visibility="gone" />

</RelativeLayout>
