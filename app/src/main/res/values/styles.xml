<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="CropImage" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_new</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_new</item>
        <item name="colorAccent">@color/colorAccent_new</item>
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

    <style name="Splash" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="DialogTheme" parent="@style/Base.Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>

    </style>


    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>


    <style name="DialogAnimationLeftRight" parent="AppTheme">
        <item name="android:windowEnterAnimation">@anim/enter_from_left</item>
        <item name="android:windowExitAnimation">@anim/exit_to_right</item>
    </style>

    <style name="DialogAnimationBottTop" parent="AppTheme">
        <item name="android:windowEnterAnimation">@anim/slide_up2</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom2</item>
    </style>

    <style name="fb_login">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">@dimen/_25sdp</item>
        <item name="android:layout_marginLeft">@dimen/_25sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="txt_bottom_bar">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/unselected_bb_txt</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="fragment_txt_top">
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_no_event">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="txt_event_name">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="txt_event_welcome">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">#efefef</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_event_green_background">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/old_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
    </style>

    <style name="txt_event_gray">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/gray_bottom</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/_15sdp</item>
    </style>


    <style name="MenuButtonsSmall">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">@color/transparent</item>
        <item name="fab_colorPressed">@color/transparent</item>
        <item name="fab_colorRipple">@color/transparent</item>
    </style>

    <style name="DialogAnimation_2">
        <item name="android:windowEnterAnimation">@anim/slide_up2</item>
        <item name="android:windowExitAnimation">@anim/slide_down2</item>
    </style>

    <style name="MenuButtonsSmall.Green">
        <item name="fab_colorNormal">#43A047</item>
        <item name="fab_colorPressed">#2E7D32</item>
        <item name="fab_colorRipple">#1B5E20</item>
    </style>


    <style name="popUpbottomtext">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black80p</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>


    <style name="et_black_cursor">
        <item name="colorAccent">@color/colorPrimary_new</item>
        <item name="colorPrimary">@color/colorPrimary_new</item>
        <item name="colorPrimaryDark">@color/colorPrimary_new</item>
    </style>

    <style name="txt_table">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black80p</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColorHint">@color/txt_add_event</item>
        <item name="android:background">@drawable/transparent</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <!--New Style-->
    <style name="CheckboxTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_new</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_new</item>
        <item name="colorAccent">@color/colorPrimary_new</item>
    </style>


    <style name="AuthTabBarStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/select_gender_color</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <declare-styleable name="AspectRatioImageView">
        <attr name="ari_aspect" format="enum">
            <enum name="width" value="0" />
            <enum name="height" value="1" />
            <enum name="auto" value="2" />
        </attr>
        <attr name="ari_ratio" format="float" />
    </declare-styleable>




</resources>
